# Plant Whisperer Environment Variables

# Backend Configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
BACKEND_WORKERS=1
BACKEND_RELOAD=true

# Frontend Configuration
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=5173

# API Configuration
API_BASE_URL=http://localhost:8000
CORS_ORIGINS=["http://localhost:5173", "http://127.0.0.1:5173"]

# Storage Configuration
STORAGE_PATH=./storage
UPLOAD_MAX_SIZE=5242880  # 5MB in bytes
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# ML Configuration
MODEL_CACHE_DIR=./storage/models
SAMPLE_DATA_DIR=./storage/samples
DEFAULT_MODEL_NAME=efficientnet_b0_plant_whisperer

# Inference Configuration
INFERENCE_DEVICE=cpu  # cpu, cuda
INFERENCE_BATCH_SIZE=1
INFERENCE_IMAGE_SIZE=512
INFERENCE_CONFIDENCE_THRESHOLD=0.5

# Training Configuration
TRAINING_EPOCHS=10
TRAINING_BATCH_SIZE=32
TRAINING_LEARNING_RATE=0.001
TRAINING_VALIDATION_SPLIT=0.2
TRAINING_RANDOM_SEED=42

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/plant_whisperer.log

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Local LLM Configuration (disabled by default)
USE_LOCAL_LLM=false
LOCAL_LLM_MODEL_PATH=./storage/models/qwen2-1.5b-instruct.gguf
LOCAL_LLM_MAX_TOKENS=512
